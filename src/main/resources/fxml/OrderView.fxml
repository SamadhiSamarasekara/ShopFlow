<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.controller.OrderController">
   <children>
      <!-- Header -->
      <Label text="Order Management" textFill="#2c3e50">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </Label>
      
      <HBox spacing="20.0">
         <VBox.margin>
            <Insets left="20.0" right="20.0" bottom="20.0" />
         </VBox.margin>
         
         <!-- Form Panel -->
         <VBox spacing="10.0" prefWidth="400.0">
            <Label text="Order Information" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
            
            <GridPane hgap="10.0" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="NEVER" minWidth="120.0" />
                  <ColumnConstraints hgrow="ALWAYS" />
               </columnConstraints>
               
               <Label text="Customer:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
               <ComboBox fx:id="cmbCustomer" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
               
               <Label text="Order Date:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
               <DatePicker fx:id="dpOrderDate" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               
               <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
               <ComboBox fx:id="cmbStatus" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               
               <Label text="Subtotal:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
               <TextField fx:id="txtSubtotal" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               
               <Label text="Tax Amount:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
               <TextField fx:id="txtTaxAmount" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="4" />
               
               <Label text="Discount:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
               <TextField fx:id="txtDiscountAmount" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="5" />
               
               <Label text="Total Amount:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
               <TextField fx:id="txtTotalAmount" editable="false" style="-fx-background-color: #f0f0f0;" GridPane.columnIndex="1" GridPane.rowIndex="6" />
               
               <Label text="Notes:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
               <TextArea fx:id="txtNotes" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            </GridPane>
            
            <!-- Buttons -->
            <HBox spacing="10.0" alignment="CENTER_LEFT">
               <Button fx:id="btnSave" text="Save" onAction="#handleSave" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" prefWidth="80.0" />
               <Button fx:id="btnEdit" text="Edit" onAction="#handleEdit" style="-fx-background-color: #f39c12; -fx-text-fill: white;" prefWidth="80.0" />
               <Button fx:id="btnDelete" text="Delete" onAction="#handleDelete" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" prefWidth="80.0" />
               <Button fx:id="btnClear" text="Clear" onAction="#handleClear" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" prefWidth="80.0" />
            </HBox>
         </VBox>
         
         <!-- Table Panel -->
         <VBox spacing="10.0" HBox.hgrow="ALWAYS">
            <Label text="Orders List" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
            
            <TableView fx:id="tableOrders" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colOrderId" text="Order ID" prefWidth="80.0" />
                  <TableColumn fx:id="colCustomerName" text="Customer" prefWidth="150.0" />
                  <TableColumn fx:id="colOrderDate" text="Order Date" prefWidth="130.0" />
                  <TableColumn fx:id="colStatus" text="Status" prefWidth="100.0" />
                  <TableColumn fx:id="colTotalAmount" text="Total Amount" prefWidth="120.0" />
               </columns>
            </TableView>
         </VBox>
      </HBox>
   </children>
</VBox>
