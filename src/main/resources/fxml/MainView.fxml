<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainBorderPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.controller.MainController">
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #2c3e50;" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lblTitle" text="Shop Management System" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
   </top>
   <left>
      <VBox fx:id="sidebar" prefWidth="200.0" style="-fx-background-color: #34495e;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnDashboard" mnemonicParsing="false" onAction="#handleDashboardAction" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: center-left;" text="📊 Dashboard">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </Button>
            <Button fx:id="btnProducts" mnemonicParsing="false" onAction="#handleProductsAction" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: center-left;" text="📦 Products">
               <padding>
                  <Insets left="20.0" />
               </padding>
            </Button>
            <Button fx:id="btnCategories" mnemonicParsing="false" onAction="#handleCategoriesAction" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: center-left;" text="🏷️ Categories">
               <padding>
                  <Insets left="20.0" />
               </padding>
            </Button>
            <Button fx:id="btnCustomers" mnemonicParsing="false" onAction="#handleCustomersAction" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: center-left;" text="👥 Customers">
               <padding>
                  <Insets left="20.0" />
               </padding>
            </Button>
            <Button fx:id="btnOrders" mnemonicParsing="false" onAction="#handleOrdersAction" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: center-left;" text="🛒 Orders">
               <padding>
                  <Insets left="20.0" />
               </padding>
            </Button>
            <Button fx:id="btnPayments" mnemonicParsing="false" onAction="#handlePaymentsAction" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: center-left;" text="💳 Payments">
               <padding>
                  <Insets left="20.0" />
               </padding>
            </Button>
            <Button fx:id="btnReports" mnemonicParsing="false" onAction="#handleReportsAction" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: center-left;" text="📈 Reports">
               <padding>
                  <Insets left="20.0" />
               </padding>
            </Button>
         </children>
      </VBox>
   </left>
   <center>
      <Label text="Welcome to Shop Management System" BorderPane.alignment="CENTER">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </center>
</BorderPane>
