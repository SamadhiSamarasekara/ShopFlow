<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.controller.CategoryController">
   <children>
      <Label text="Category Management" textFill="#2c3e50">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </Label>
      
      <!-- Input Form -->
      <VBox spacing="10.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10;">
         <children>
            <Label text="Category Information" textFill="#2c3e50">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            
            <GridPane hgap="10.0" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="NEVER" minWidth="120.0" prefWidth="120.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Category Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <TextField fx:id="txtCategoryName" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  
                  <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <TextArea fx:id="txtDescription" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  
                  <Label text="Active:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <CheckBox fx:id="chkIsActive" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               </children>
            </GridPane>
            
            <!-- Buttons -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button fx:id="btnSave" mnemonicParsing="false" onAction="#handleSaveAction" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Save" />
                  <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#handleEditAction" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Edit" />
                  <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#handleDeleteAction" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Delete" />
                  <Button fx:id="btnClear" mnemonicParsing="false" onAction="#handleClearAction" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Clear" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
      </VBox>
      
      <!-- Categories Table -->
      <VBox spacing="10.0">
         <children>
            <Label text="Categories List" textFill="#2c3e50">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            
            <TableView fx:id="tableCategories" prefHeight="400.0">
               <columns>
                  <TableColumn fx:id="colCategoryId" prefWidth="80.0" text="ID" />
                  <TableColumn fx:id="colCategoryName" prefWidth="200.0" text="Category Name" />
                  <TableColumn fx:id="colDescription" prefWidth="300.0" text="Description" />
                  <TableColumn fx:id="colCreatedAt" prefWidth="150.0" text="Created At" />
                  <TableColumn fx:id="colIsActive" prefWidth="100.0" text="Status" />
               </columns>
            </TableView>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
