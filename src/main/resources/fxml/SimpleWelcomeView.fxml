<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.controller.SimpleWelcomeController" 
      alignment="CENTER" spacing="30.0" style="-fx-background-color: linear-gradient(to bottom, #3498db, #2c3e50);">
   
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
   
   <!-- Header -->
   <VBox alignment="CENTER" spacing="10.0">
      <Label text="🏪 ShopFlow" style="-fx-font-size: 48px; -fx-text-fill: white; -fx-font-weight: bold;" />
      <Label text="Management System" style="-fx-font-size: 18px; -fx-text-fill: #ecf0f1;" />
   </VBox>
   
   <!-- Welcome Message -->
   <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 10; -fx-padding: 20;">
      <Label text="Welcome to ShopFlow" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" />
      <Label text="Your comprehensive retail management solution" style="-fx-font-size: 16px; -fx-text-fill: #bdc3c7;" textAlignment="CENTER" wrapText="true" />
   </VBox>
   
   <!-- Buttons -->
   <HBox alignment="CENTER" spacing="20.0">
      <Button fx:id="btnGetStarted" text="Get Started" onAction="#handleGetStarted" 
              prefWidth="150.0" prefHeight="40.0" 
              style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5;" />
      <Button fx:id="btnAbout" text="About" onAction="#handleAbout" 
              prefWidth="100.0" prefHeight="40.0" 
              style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-width: 2; -fx-background-radius: 5; -fx-border-radius: 5;" />
   </HBox>
   
   <!-- Footer -->
   <Label text="© 2025 ShopFlow Systems" style="-fx-font-size: 12px; -fx-text-fill: #95a5a6;" />
   
</VBox>
